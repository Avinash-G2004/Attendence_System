  <title>About Us</title>
  <style>
    /* Resetting some default styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      transition: all 0.3s ease;
    }

    /* Body styles */
    body {
      font-family: 'Arial', sans-serif;
      line-height: 1.6;
      background: linear-gradient(135deg, #3498db, #8e44ad);
      color: #fff;
      overflow-x: hidden;
      padding: 0 10px;
    }

    header {
      background-color: rgba(0, 0, 0, 0.7);
      color: white;
      padding: 10px 0;
    }

    header nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 20px;
    }

 
    /* Enhanced logo styling */
    header .logo img {
      width: 150px;  /* Increased size for better visibility */
      height: auto;
      object-fit: contain;
      border-radius: 8px;
      padding: 10px;
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);  /* Add a slight shadow for better visibility */
      background-color: rgba(255, 255, 255, 0.3);  /* Slight background to make logo pop */
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    /* Logo hover effect */
    header .logo img:hover {
      transform: scale(1.1);  /* Slight scale-up on hover */
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);  /* Enhance shadow effect */
    }

    header .nav-links {
      list-style-type: none;
      display: flex;
    }

    header .nav-links li {
      margin: 0 10px;
    }

    header .nav-links a {
      color: white;
      text-decoration: none;
      font-weight: bold;
      text-transform: uppercase;
    }

    header .nav-links a:hover {
      color: #f39c12;
    }

    /* Intro Section */
    .intro {
      background: rgba(0, 0, 0, 0.5);
      padding: 30px;
      text-align: center;
      width: 100%;
      max-width: 900px;
      margin: 0 auto;
      border-radius: 10px;
    }

    .intro h1 {
      font-size: 2rem;
      margin-bottom: 15px;
      animation: fadeIn 1s ease-out;
    }

    .intro p {
      font-size: 1rem;
      max-width: 600px;
      margin: 0 auto;
      animation: fadeIn 1.5s ease-out;
    }

    /* Students Section */
    .students {
      padding: 30px 20px;
      background: rgba(0, 0, 0, 0.3);
      width: 100%;
      max-width: 900px;
      margin: 50px auto;
      border-radius: 10px;
    }

    .students h2 {
      text-align: center;
      font-size: 1.8rem;
      margin-bottom: 25px;
      animation: fadeIn 1.5s ease-out;
    }

    .card-container {
      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
      gap: 20px;
      animation: fadeInUp 1s ease-out;
      padding-bottom: 20px;
      transform: scale(0.95);
      transition: transform 0.4s ease;
    }

    .card-container:hover {
      transform: scale(1);
    }

    .card {
      background-color: #a2d9ff;  /* Light Blue Color */
      width: 300px;
      margin: 10px;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
      text-align: center;
      position: relative;
      cursor: pointer;
      transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
      display: flex;
      padding: 15px;
      opacity: 0.9;
    }

    .card:hover {
      transform: translateY(-10px) scale(1.05);
      box-shadow: 0 12px 15px rgba(0, 0, 0, 0.2);
      background-color: #3498db; /* Darker Blue on Hover */
      opacity: 1;
    }

    .card img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 50%;
      margin-bottom: 15px;
      transition: transform 0.3s ease;
    }

    .card:hover img {
      transform: scale(1.1);
    }

    .card .card-content {
      display: flex;
      flex-direction: column;
      justify-content: space-around;
    }

    .card h3 {
      color: rgb(37, 36, 36);
      font-size: 1.2rem;
      margin: 5px 0;
    }

    .card p {
      font-size: 0.9rem;
      color: #555;
      margin-bottom: 10px;
    }

    /* Social Icons */
    .social-icons {
      margin-top: 10px;
      display: flex;
      justify-content: center;
      gap: 15px;
    }

    .social-icons a {
      font-size: 1.5rem;
      color: #555;
      transition: color 0.3s ease, transform 0.3s ease;
    }

    .social-icons a:hover {
      color: #f39c12;
      transform: scale(1.1);
    }

    /* Footer */
    footer {
      background-color: rgba(0, 0, 0, 0.7);
      color: white;
      text-align: center;
      padding: 30px 20px;
      margin-top: 50px;
    }

    footer .footer-content {
      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
    }

    footer .footer-content div {
      max-width: 300px;
      margin: 10px;
    }

    footer h4 {
      margin-bottom: 10px;
      font-size: 1.3rem;
      color: #f39c12;
    }

    footer p, footer a {
      color: #bbb;
      font-size: 0.9rem;
      line-height: 1.6;
    }

    footer a:hover {
      color: #f39c12;
    }

    /* Animations */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Media Queries for Responsiveness */
    @media (max-width: 768px) {
      header nav {
        flex-direction: column;
        text-align: center;
      }

      .card-container {
        flex-direction: column;
        align-items: center;
      }
    }

    @media (max-width: 480px) {
      .intro h1 {
        font-size: 1.8rem;
      }

      .intro p {
        font-size: 0.9rem;
      }

      .students {
        padding: 20px 10px;
      }

      .students h2 {
        font-size: 1.5rem;
      }

      .card-container {
        flex-direction: column;
        align-items: center;
      }

      .card {
        width: 90%;
        flex-direction: column;
        align-items: center;
      }

      .card img {
        margin-bottom: 15px;
      }
    }
  </style>
